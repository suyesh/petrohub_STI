<%= simple_form_for(@retailer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone_number %>
    <%= f.input :cell_number %>
    <%= f.input :tax_id %>
    <%= f.input :business_name %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :years_in_business %>
    <%= f.simple_fields_for :users do |user| %>
    <%= user.input :email %>
    <%= user.input :password %>
    <%= user.input :password_confirmation %>
    <%end%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
