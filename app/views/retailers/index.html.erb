<p id="notice"><%= notice %></p>

<h1>Listing Retailers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Cell number</th>
      <th>Tax</th>
      <th>Business name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Years in business</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retailers.each do |retailer| %>
      <tr>
        <td><%= retailer.first_name %></td>
        <td><%= retailer.last_name %></td>
        <td><%= retailer.phone_number %></td>
        <td><%= retailer.cell_number %></td>
        <td><%= retailer.tax_id %></td>
        <td><%= retailer.business_name %></td>
        <td><%= retailer.address1 %></td>
        <td><%= retailer.address2 %></td>
        <td><%= retailer.city %></td>
        <td><%= retailer.state %></td>
        <td><%= retailer.zip %></td>
        <td><%= retailer.years_in_business %></td>
        <td><%= link_to 'Show', retailer %></td>
        <td><%= link_to 'Edit', edit_retailer_path(retailer) %></td>
        <td><%= link_to 'Destroy', retailer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

