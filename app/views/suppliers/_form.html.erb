<%= simple_form_for(@supplier) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone_number %>
    <%= f.input :cell_number %>
    <%= f.input :tax_id %>
    <%= f.input :business_name %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :years_in_business %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
